<!-- FARKLI ÖRNEK -->
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    
    <script>

        document.write(5%2)
        let x =5
        x++
        document.write("<br>x değişkeninin değeri: "+x)
        document.write("<br>x değişkeninin değeri: "+(x++))
        document.write("<br>x değişkeninin değeri: "+x)
        document.write("<br>x değişkeninin değeri: "+(++x))
        let y =7
        document.write("<br>y değişkeninin 3 üssü: "+(y**3))
    </script>
</body>
</html>
