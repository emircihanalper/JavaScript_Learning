    <h2>Ekran Modu Seçimi</h2>
    <input type="button" value="Gündüz Modu" onclick=gunduz()><br><br>
    <input type="button"  value="Gece Modu" onclick=gece()>

    <script>
        function gece()
        {
            document.body.style.backgroundColor="black";
            document.body.style.color="white";            
        }
        function gunduz()
        {
            document.body.style.backgroundColor="white";
            document.body.style.color="black";            
        }

    </script>
